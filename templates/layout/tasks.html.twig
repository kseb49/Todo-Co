<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <div class="caption">
            <h4 class="pull-right">
                {% if task.isDone %}<span class="glyphicon glyphicon-ok"></span>{% else %}<span class="glyphicon glyphicon-remove"></span>{% endif %}
            </h4>
            <h4>
                {% if app.user == task.user or is_granted('ROLE_ADMIN') and  task.user.username == 'anonyme'%}
                    <a href="{{ path('task_edit', {'id' : task.id }) }}"> {{ task.title }} </a> {% else %} {{ task.title }}
                {% endif %}
            </h4>
            <p>{{ task.content }}</p>
            <p class="font-weight-light">@{{ task.user.username }}</p>
        </div>
        <div>
        {% if app.user == task.user  or task.user.username == 'anonyme' and is_granted('ROLE_ADMIN')%}
            {% include 'layout/form_tasks.html.twig' %}
        {% endif %}
        </div>
    </div>
</div>