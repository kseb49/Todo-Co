{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    <a href="{{ path('task_create') }}" class="btn btn-info pull-right">Créer une tâche</a>
    <hr class="border border-primary border-3">
    <h4 class="text-center">⬇️Vos Tâches⬇️</h4>
    <hr class="border border-primary border-3">
    <div class="row mt-2">
        {% for task in tasks %}
            {% if app.user == task.user %}
                {% include 'layout/tasks.html.twig' %}
            {% endif %}
            {% else %}
                <div class="alert alert-warning" role="alert">
                    Il n'y a pas encore de tâche enregistrée. <a href="{{ path('task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
                </div>

                <div>
                    <form action="{{ path('task_toggle', {'id' : task.id }) }}">
                        <button class="btn btn-success btn-sm pull-right">
                            {% if not task.isDone %}Marquer comme faite{% else %}Marquer non terminée{% endif %}
                        </button>
                    </form>
                    {% if app.user.id == task.user.id %}
                    <form action="{{ path('task_delete', {'id' : task.id }) }}" method='post'>
                        <input type="hidden" name="token" value={{csrf_token('delete-task')}}>
                        <button class="btn btn-danger btn-sm pull-right">Supprimer</button>
                    </form>
                    {% endif %}
                </div>
            </div>
        </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée. <a href="{{ path('task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
            </div>
        {% endfor %}
    </div>
    {% if is_granted('ROLE_ADMIN') %}
        <hr class="border border-primary border-3">
        <h4 class="text-center">⬇️Tâches des autres utilisateurs⬇️</h4>
        <hr class="border border-primary border-3">
        <div class="row">
            {% for task in tasks %}
                {% if task.user != app.user %}
                    {% include 'layout/tasks.html.twig' %}
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
