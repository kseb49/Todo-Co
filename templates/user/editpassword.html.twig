{% extends 'base.html.twig' %}

{% block header_title %}<h1>Modifier votre mot de passe <strong>{{ user.username }}</strong></h1>{% endblock %}
{% block header_img %}{% endblock %}
{% block title %} {{ parent() }} - Modifier votre mot de passe {% endblock  %}
{% block body %}
    <div class="row">
        {{ form_start(form, {'action' : path('user_password_change', {'id' : user.id})}) }}
            {{ form_widget(form)}}
            <button type="submit" class="btn btn-success pull-right">Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
